
    model {
    #model
    for (i in 1:N){
    y[i, ] ~ ddirch(alpha[i,])

    log(alpha[i,1]) <- beta0[1] + beta1[1]*V[i,1]
    log(alpha[i,2]) <- beta0[2] + beta1[2]*V[i,2]
    log(alpha[i,3]) <- beta0[3] + beta1[3]*V[i,3]
    log(alpha[i,4]) <- beta0[4] + beta1[4]*V[i,4]
    }

    #priors
    for (c in 1:d)
    {
    beta0[c]  ~ dnorm(0, 0.0001)
    beta1[c] ~ dnorm(0, 0.0001)
    }
    }